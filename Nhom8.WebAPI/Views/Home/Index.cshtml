                <div class="radio">
                    <input type="radio" name="optracdio" value="" style="font-size:10px" /> chọn tất cả sản phẩm
                </div>
                <button class="btn btn-primary">Hiển Thị Sản Phâm</button>
            </div>
        </form>
        <div class="col-md-3"><div id="HienThiSanPham"></div></div>
        <div class="col-md-2">huong dan su dung trang hien thi san pham</div>
    </div>
</div>
@section Scripts{
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        $('document').ready(function () {
            var HienThiSanPham = $('#HienThiSanPham');
            var rows = '';
            $.ajax({
                type: 'GET',
                url: 'http://localhost:51208/api/sanpham/',
                dataType: 'jsonp',
                success: function (data) {
                    $.each(data, function (index, val) {
                        rows = val.TenSanPham;
                        HienThiSanPham.append('<li>' + rows + '</li>')
                    });
                }
            });
        });
    </script>
}
